<% if signed_in? %>

  <div class="row">
    <aside class="left_box">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="right_box col-lg-9 col-md-8 col-sm-8 col-xs-8">
      <h3>Everyone Wants!</h3>
      <div class="clearfix" id="masonry-container">
        <%= render 'shared/feed' %>        
      </div>
      <%= will_paginate @feed_items %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Giveme</h1>

    <h2>
    <!-- 紹介文 -->
    </h2>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>